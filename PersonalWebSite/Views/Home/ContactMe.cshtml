@{
	Layout = "~/Views/Shared/_EmptyLayout.cshtml";
	ViewData["Title"] = "Bana Ulaş";
}

<body class="bg">
	<div class="con">

		<form class="myForm" action="https://formspree.io/f/xpzbkjbg" method="post">
			<h3>İletişim</h3>
			İsminiz:
			<input type="text" class="name" placeholder="İsminiz" name="name" required>

			E-Mail:
			<input type="email" class="email" placeholder="E-Mail" name="email" required>

			Mesajınız:
			<textarea id="message" class="message" name="message" rows="5" placeholder="Mesajınız" required></textarea>

			<div class="button-holder">				 
				<button type="submit" class="submit" name="send">Gönder</button>
			</div>
			<div class="button-holder">
				<button type="reset" name="clear">Temizle</button>
			</div>
		</form> 
	</div>
</body>